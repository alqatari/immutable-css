#!/usr/bin/env node

var fs = require('fs')
var program = require('commander')
var immutableCss = require('..')

program
  .version('0.0.1')
  .command('* <immutableCssFile.css> [appCssFiles.css...]')
  .action(function(immutableCssFile, appCssFiles) {
    if(appCssFiles) {
      appCssFiles.forEach(function(appCssFile) {
        var mutations = immutableCss(immutableCssFile, appCssFile, { verbose: true })
        if (mutations.length) {
          process.exit(1)
        }
      })
    }
  })

program.parse(process.argv)
