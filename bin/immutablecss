#!/usr/bin/env node

var fs = require('fs')
var glob = require('glob')
var meow = require('meow')
var postcss = require('postcss')
var immutableCss = require('..')

var helpText = [
  'Usage',
  '  immutable-css --immutable=basscss.css --custom=app.css',
  '  immutable-css --immutable=some/immutable/**/*.css --custom=some/app/**/*.css'
]

var cli = meow({
  help: helpText,
  h: helpText,
  pkg: '../package.json'
})

if (cli.flags.h) {
  console.log(cli.help)
}

if (cli.flags.v) {
  console.log(cli.pkg.version)
}
